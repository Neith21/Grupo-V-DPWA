@model IEnumerable<EmployeeModel>
@{
	ViewData["Title"] = "Listado de Empleados";
}

<h1>Listado de Empleados</h1>

<div class="container">
	<div class="row">
		<div class="col-md-12">

			<div class="mb-3 mb-3">
				<a asp-action="Create" asp-controller="Employee" class="btn btn-success">
					Nuevo Empleado
				</a>
			</div>

			<table class="table table-bordered table-striped table-responsive" id="employeesTable">
				<thead>
					<tr>
						<td>Empleado ID</td>
						<td>Nombre</td>
						<td>Apellidos</td>
						<td>Posición</td>
						<td>Salario</td>
						<td>E-mail</td>
						<td>Fecha Contratación</td>
						<td>Acciones</td>
					</tr>
				</thead>
				<tbody>
					@foreach (var employee in Model)
					{
						<tr>
							<td>@Html.DisplayFor(item => employee.EmployeeID)</td>
							<td>@Html.DisplayFor(item => employee.EmployeeFirstName)</td>
							<td>@Html.DisplayFor(item => employee.EmployeeLastName)</td>
							<td>@Html.DisplayFor(item => employee.Position)</td>
							<td>@Html.DisplayFor(item => employee.Salary)</td>
							<td>@Html.DisplayFor(item => employee.EmployeeEmail)</td>
							<td>@Html.DisplayFor(item => employee.HireDate)</td>
							<td>
								<a asp-controller="Employee"
								   asp-action="Edit"
								   asp-route-id="@employee.EmployeeID"
								   class="btn btn-primary">
									Editar
								</a>
								<a asp-controller="Employee"
								   asp-action="Delete"
								   asp-route-id="@employee.EmployeeID"
								   class="btn btn-danger">
									Eliminar
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$("#employeesTable").DataTable({
				dom: 'Bfrtip',
				buttons: [
					{
						extend: 'csv',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					},
					{
						extend: 'pdf',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					},
					{
						extend: 'excel',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					}
				],
				columnDefs: [
					{
						targets: 7,
						orderable: false,
						searchable: false
					}
				],
				language: {
					url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
				}
			});
		});
	</script>
}