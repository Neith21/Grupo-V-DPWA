@model IEnumerable<RentalsModel>
@{
    ViewData["Title"] = "Listado de vehiculos arrendados.";
}

<h1>Listado de arrendamientos.</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="mt-3 mb-3">
                <a asp-action="Create" asp-controller="Rentals" class="btn btn-success">
                    Nuevo arrendamiento
                </a>
            </div>

            <table class="table table-bordered table-striped table-responsive" id="rentalsTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Vehiculo</th>
                        <th>Empleado</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Monto cancelado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rentals in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => rentals.RentID)</td>
                            <td>@Html.DisplayFor(item => rentals.CustomerFirstName)</td>
                            <td>@Html.DisplayFor(item => rentals.Model)</td>
                            <td>@Html.DisplayFor(item => rentals.EmployeeFirstName)</td>
                            <td>@Html.DisplayFor(item => rentals.StartDate)</td>
                            <td>@Html.DisplayFor(item => rentals.EndDate)</td>
                            <td>@Html.DisplayFor(item => rentals.AmountPaid)</td>
                            <td>
                                <a asp-controller="Rentals"
                                   asp-action="Edit"
                                   asp-route-id="@rentals.RentID"
                                   class="btn btn-primary">
                                    Editar
                                </a>
                                <a asp-controller="Rentals"
                                   asp-action="Delete"
                                   asp-route-id="@rentals.RentID"
                                   class="btn btn-danger">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#rentalsTable").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'csv',
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    },
                    {
                        extend: 'pdf',
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    },
                    {
                        extend: 'excel',
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    }
                ],
                columnDefs: [
                    {
                        targets: 7,
                        orderable: false,
                        searchable: false
                    }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                }
            });
        });
    </script>
}